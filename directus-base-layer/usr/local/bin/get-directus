#!/bin/sh
set -e

DIRECTUS_VERSION=$1

rm -rf /var/www/html
mkdir -p /var/www

wget -O /tmp/directus_download.tar.gz https://github.com/quantavi/directus/archive/$DIRECTUS_VERSION.tar.gz
tar -xf /tmp/directus_download.tar.gz -C /var/www/
mv /var/www/directus* /var/www/html
rm /tmp/directus_download.tar.gz
